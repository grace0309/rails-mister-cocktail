<h1>Cocktails</h1>


  <div class="row">
<% @cocktails.each do |cocktail| %>
<div class="card mx-2 my-3" style="width: 18rem;">
  <% if cocktail.photo.present? %>
  <img lass="card-img-top" src="<%= cl_image_tag cocktail.photo%>" alt="">
<% else %>
  <img class="card-img-top" src="https://source.unsplash.com/1600x900/?<%=cocktail.name  %>" alt="Card image cap">
<% end %>
  <div class="card-body">
    <h5 class="card-title">
    <%= link_to cocktail.name, cocktail_path(cocktail)%>
    </h5>
  </div>
</div>
<% end %>
</div>

<%= link_to "Add a New Cocktail", new_cocktail_path, class: "btn btn-primary" %>
